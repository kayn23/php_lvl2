{% extends 'index.twig' %}
{% block sidebar %}
    {% include 'sidebar.twig' %}
{% endblock %}

{% block login %}
    {% include 'autorization.twig' %}
{% endblock %}

{% block main %}
    <div class="main">
        <header class="main--header">
            <h1 class="main--caption">{{ book.name }}</h1>
        </header>
        <div class="onebook">
            <img src="{{ book.img }}" alt="{{ book.name }}">
            <p class="onebook--price"><span>Цена:</span> {{ book.price }}</p>
            <h3>Описание:</h3>
            <p>{{ book.description }}</p>
            <a href="?c=book&action=delete&id={{ book.id }}" class="onebook--delete">Удалить</a>
        </div>
    </div>
{% endblock %}

